@model Dziennik_v0._1.Core.ViewModels.IndexUserPanelViewModel

@{
    ViewBag.Title = "Index";
}
<h2>Moje Treningi:</h2>
<div>
    <p>
        @Html.ActionLink("Dodaj trening siłowy", "Create", null, new { @class = "btn btn-success m-3" })
        @Html.ActionLink("Dodaj trening cardio", "CreateCardio", null, new { @class = "btn btn-success m-3", @id = "btn-cardio" })
    </p>
</div>
<table class="table text-center">
    <tr>
        <th>
            Edycja:
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardioList[0].Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardioList[0].LengthOfTraining)
        </th>
        <th>
            Objętość/Rodzaj cardio:
        </th>
        <th>
            Rodzaj treningu:
        </th>
        <th>
            Szczegóły:
        </th>
        <th>
            Usuń:
        </th>
    </tr>

    @foreach (var item in Model.WorkoutList)
    {
<tr>
    <td>
        <a href="@Url.Action("Edit","UserPanel",new { id = item.Id})" class="btn btn-success btn-sm">

            <i class="fas fa-edit"></i>
        </a>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LengthOfTraining)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.WorkoutVolume)
    </td>
    <td>
        @{
            if (item is Dziennik_v0._1.Core.Models.Workout)
            {
                <i class="fas fa-dumbbell"></i>
            }
            else
            {
                <i class="fas fa-heartbeat"></i>
            }
        }
    </td>
    <td>
        <a href="@Url.Action("Details","UserPanel",new { id = item.Id })" class="btn btn-sm btn-primary">

            <i class="fas fa-list-alt"></i>
        </a>
    </td>
    <td>
        <a href="@Url.Action("Delete","UserPanel",new { id = item.Id })" class="btn btn-danger btn-sm">

            <i class="fas fa-trash"></i>
        </a>
    </td>
</tr>
                    }
        @foreach (var model in Model.CardioList)
        {
<tr>
    <td>
        <a href="@Url.Action("Edit","UserPanel",new { id = model.Id, type="cardio" })" class = "btn btn-success btn-sm", id= "btn-cardio">

            <i class="fas fa-edit"></i>
        </a>
    </td>
    <td>
        @Html.DisplayFor(modelItem => model.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => model.LengthOfTraining)
    </td>
    <td>
        @Html.DisplayFor(modelItem => model.CardioType)
    </td>
    <td>
        @{
            if (model is Dziennik_v0._1.Core.Models.Workout)
            {
                <i class="fas fa-dumbbell"></i>
            }
            else
            {
                <i class="fas fa-heartbeat"></i>
            }
        }
    </td>
    <td>
        <a href="@Url.Action("Details","UserPanel",new { id = model.Id, type="cardio" })" class="btn btn-sm btn-primary">

            <i class="fas fa-list-alt"></i>
        </a>
    </td>
    <td>
        <a href="@Url.Action("Delete","UserPanel",new { id = model.Id, type="cardio" })" class="btn btn-danger btn-sm">

            <i class="fas fa-trash"></i>
        </a>
    </td>
</tr>
        }
    </table>